<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style>
		.important {
			font-weight: bold;
		}
	</ui:style>
	<g:TabLayoutPanel ui:field="mainPanel" barUnit='PX'
		barHeight='30' width="150px" height="150px">
		<g:tab>
			<g:header>Game</g:header>
			<g:VerticalPanel width="150px">
				<g:HorizontalPanel>
					<g:Label ui:field="lbType"/>
					<g:Label ui:field="lbConcept"/>
				</g:HorizontalPanel>
			</g:VerticalPanel>
		</g:tab>
		<g:tab>
			<g:header>Scores</g:header>
			<g:TabLayoutPanel  barUnit='PX' barHeight='30' >
				<g:tab>
					<g:header>AAAAAAAAa</g:header>	
					<g:HTML>Some html here please</g:HTML>
				</g:tab>
				<g:tab>
					<g:header>BBBBBBBbbbbb</g:header>
					<g:HTML>Some html here please</g:HTML>
				</g:tab>
			</g:TabLayoutPanel>
		</g:tab>
		<g:tab>
			<g:header>Stuff</g:header>
			<g:VerticalPanel>
				<g:HorizontalPanel>
					<g:Label>Game mode:</g:Label>
					<g:RadioButton name="gameMode" text="all"/>
					<g:RadioButton name="gameMode" text="team"/>
				</g:HorizontalPanel>
				<g:HorizontalPanel>
					<g:Label>Time per round:</g:Label>
					<g:TextBox width="50px">100</g:TextBox>
				</g:HorizontalPanel>				
			</g:VerticalPanel>
		</g:tab>
	</g:TabLayoutPanel>
</ui:UiBinder> 