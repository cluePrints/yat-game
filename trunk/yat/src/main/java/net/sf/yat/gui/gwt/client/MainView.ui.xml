<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" 
	xmlns:custom="urn:import:net.sf.yat.gui.gwt.client">
	<g:TabLayoutPanel ui:field="mainPanel" barUnit='PX'
		barHeight='30' width="150px" height="150px">
		<g:tab>
			<g:header>Game</g:header>
			<g:VerticalPanel width="150px">
				<g:HorizontalPanel>
					<g:PushButton ui:field="lbType" />
					<g:PushButton ui:field="lbConcept" />
				</g:HorizontalPanel>
				<g:HorizontalPanel>
					<g:TextBox ui:field="tbTimer" width="50px" />
					<g:Button ui:field="btnTimer" width="70px"></g:Button>
				</g:HorizontalPanel>
				<g:HorizontalPanel>
					<g:PushButton ui:field="lbCurrentPlayer" width="110px" />
				</g:HorizontalPanel>
				<g:HorizontalPanel>
					<g:PushButton ui:field="btnGuessed" width="50px" />
					<g:PushButton ui:field="btnFailed" width="50px" />
				</g:HorizontalPanel>
			</g:VerticalPanel>
		</g:tab>
		<g:tab>
			<g:header>Scores</g:header>
			<g:VerticalPanel>
			</g:VerticalPanel>
		</g:tab>
		<g:tab>
			<g:header>Stuff</g:header>
			<g:VerticalPanel>
				<g:PushButton ui:field="btnNewGame" />
				<g:HorizontalPanel>
					<g:Label>Game mode:</g:Label>
					<g:RadioButton name="gameMode" text="all" />
					<g:RadioButton name="gameMode" text="team" />
				</g:HorizontalPanel>
				<g:HorizontalPanel>
					<g:Label>Time per round:</g:Label>
					<g:TextBox width="50px">100</g:TextBox>
				</g:HorizontalPanel>
			</g:VerticalPanel>
		</g:tab>
	</g:TabLayoutPanel>
</ui:UiBinder> 