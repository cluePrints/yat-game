<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder 
	xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:custom="urn:import:net.sf.yat.gui.gwt.client">
	<ui:style>
		.important {
			font-weight: bold;
		}
	</ui:style>
	<g:TabLayoutPanel ui:field="mainPanel" barUnit='PX'
		barHeight='30' width="150px" height="150px">
		<g:tab>
			<g:header>Game</g:header>
			<g:VerticalPanel width="150px">
				<g:HorizontalPanel>
					<g:PushButton ui:field="lbType"/>
					<g:PushButton ui:field="lbConcept"/>
				</g:HorizontalPanel>
				<g:HorizontalPanel>
					<g:TextBox ui:field="tbTimer" text="179" width="50px"/>
					<g:PushButton ui:field="btnTimer" text="Pause" width="50px"/>
				</g:HorizontalPanel>
				<g:HorizontalPanel>
					<g:PushButton text="Failed" width="50px"/>
					<g:PushButton text="Guessed" width="50px"/>
				</g:HorizontalPanel>
			</g:VerticalPanel>
		</g:tab>
		<g:tab>
			<g:header>Scores</g:header>
			<custom:TeamSelector ui:field="teamSelector"/>
		</g:tab>
		<g:tab>
			<g:header>Stuff</g:header>
			<g:VerticalPanel>
				<g:HorizontalPanel>
					<g:Label>Game mode:</g:Label>
					<g:RadioButton name="gameMode" text="all"/>
					<g:RadioButton name="gameMode" text="team"/>
				</g:HorizontalPanel>
				<g:HorizontalPanel>
					<g:Label>Time per round:</g:Label>
					<g:TextBox width="50px">100</g:TextBox>
				</g:HorizontalPanel>				
			</g:VerticalPanel>
		</g:tab>
	</g:TabLayoutPanel>
</ui:UiBinder> 